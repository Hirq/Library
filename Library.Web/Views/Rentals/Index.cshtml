@model Library.Web.Models.RentalListViewModel


@{
    ViewBag.Title = "Index";
}

<h2>Rental List</h2>

@if (@Model.CountBooks - @Model.CountRentals > 0)
{
    <button type="button" class="btn btn-warning"> @Html.ActionLink("Create", "Create") </button>
}

<table class="table">
    <tr>
        <th>
            Person
        </th>
        <th>
            Date
        </th>
        <th>
            Book Name
        </th>
        <th></th>
    </tr>

    @foreach (var rental in Model.Rentals)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => rental.Person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => rental.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => rental.Book.Name)
            </td>

            @using (Html.BeginForm("Delete", "Rentals", new { id = rental.Id }))
            {
                <td>
                    <button type="submit" class="btn btn-danger"> Delete </button>
                </td>
            }
        </tr>
    }

</table>
