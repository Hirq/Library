@model Library.Web.ViewModels.OpinionFormViewModel

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant.RestaurantType)
        </th>
    </tr>

@foreach (var model in Model.Restaurants) {
    <tr>
        <td>
            @Html.DisplayFor(item => model.Name)
        </td>
        <td>
            @Html.DisplayFor(item => model.Location)
        </td>        
        <td>
            @Html.DisplayFor(item => model.RestaurantType)
        </td>       
        <td>
            @Html.DisplayFor(item => @Model.AverageGradeFood)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id= model.Id }) |
            @Html.ActionLink("Details", "Details", new { id= model.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id= model.Id })
        </td>
        <td>
            @Html.ActionLink("Opinion", "IndexOpinion", new { id = model.Id })
        </td>
    </tr>
}

</table>
