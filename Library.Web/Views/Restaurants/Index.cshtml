@model Library.Web.Models.OpinionFormViewModel

<button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Create","Restaurants")'"> Add restaurant </button>

<table class="table ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant.RestaurantType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageGradeFood)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(item => restaurant.Location)
            </td>
            <td>
                @Html.DisplayFor(item => restaurant.RestaurantType)
            </td>
            <td>
                @Html.DisplayFor(item => @Model.AverageGradeFood)
            </td>

            <td>
                <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Update", "Restaurants", new { id = restaurant.Id })'"> Edit </button>
                <button type="button" class="btn btn-success" onclick="location.href = '@Url.Action("IndexOpinion", "Restaurants", new { id = restaurant.Id })'"> Opinion </button>
            </td>
        </tr>
    }
</table>
